{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
        "@typescript-eslint/quotes": [
            "error",
            "double",
            {
              "avoidEscape": true,
              "allowTemplateLiterals": true
            }
          ],
        "@typescript-eslint/semi": ["error", "always"]
    }
}
